#include <stdio.h>
int main()
{
  int n,mod,a,b,e,f,g;
  float av;
  mod = n % 7;
  av = n / 7.0;
  a = (n - mod) / 7;
  printf("The number of all students: ");
  scanf("%d",&n);
  printf("The number of students in the smallest class: %d\n",a);
  mod = 0 ? (b=a) : (b=a+1);
  printf("The number of students in the largest class: %d\n",b);
  printf("The average number of students per class: %f\n",av);
  printf("The number of classes of above average size: %d\n",mod);
  printf("The number of classes of at most average size: %d\n",e=7-mod);
  printf("The number of students in the classes of larger than average size: %d\n",f=mod*a);
  printf("The number of classes of exactly average size: %d\n",g=!mod*7);
}
