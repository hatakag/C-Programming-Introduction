#include <stdio.h>
main()
{
  printf(" THE SIZE OF BASIC DATA TYPES\n\n");
  printf("int %d\n",sized(int));
  printf("short int %d\n",sized(short int));
  printf("long int %d\n",sized(long int));
  printf("unsigned int %d\n",sized(unsigned int));
  printf("unsigned short %d\n",sized(unsigned short));
  printf("unsigned long %d\n",sized(unsigned long));
}  
